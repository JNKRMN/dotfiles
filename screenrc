#bindkey -k k8 screen
#bindkey -k k3 remove
#bindkey -k k4 split
#bindkey -k k9 focus up
#bindkey -k F2 focus down
#bindkey -k j resize -5
#bindkey -k J resize +5

# If a window goes unresponsive, don't block the whole session waiting for it.
nonblock on
multiuser on 
